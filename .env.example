# API Keys for Enhanced Phishing Scanner
VIRUSTOTAL_API_KEY=your_virustotal_api_key_here
URLVOID_API_KEY=your_urlvoid_api_key_here
GOOGLE_SAFE_BROWSING_API_KEY=your_google_safe_browsing_api_key_here

# Get free API keys from:
# VirusTotal: https://www.virustotal.com/gui/join-us (Free: 4 requests/minute)
# URLVoid: https://www.urlvoid.com/api/ (Free: 1000 requests/month)
# Google Safe Browsing: https://developers.google.com/safe-browsing/v4/get-started (Free: 10,000 requests/day)

# Flask Server Configuration (Python Backend Integration)
# Flask server port (default: 5001)
FLASK_PORT=5001

# Flask server host (default: 0.0.0.0)
FLASK_HOST=0.0.0.0

# Health check timeout in milliseconds (default: 10000)
FLASK_HEALTH_TIMEOUT=10000

# Health check interval in milliseconds (default: 500)
FLASK_HEALTH_INTERVAL=500

# Maximum health check retry attempts (default: 20)
FLASK_HEALTH_MAX_RETRIES=20

# Shutdown timeout in milliseconds (default: 5000)
FLASK_SHUTDOWN_TIMEOUT=5000

# Environment mode (development or production)
# In development mode, Flask runs with debug enabled and verbose logging
# In production mode, Flask runs optimized with minimal logging
NODE_ENV=development

# MySQL Database Configuration (Location-Based Scam Alert System)
DB_HOST=localhost
DB_PORT=3306
DB_USER=root
DB_PASSWORD=your_mysql_password_here
DB_NAME=cybershakti

# Database connection pool settings
DB_CONNECTION_LIMIT=10
DB_QUEUE_LIMIT=0

# Fraud Detection API Configuration
FRAUD_API_URL=http://localhost:8000
